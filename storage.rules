
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Rule 1: Allow anyone to read any file. 
    // This is necessary so that once an image URL is saved to a report,
    // anyone viewing the report can see the image.
    match /{allPaths=**} {
      allow read;
    }
    
    // Rule 2: Only allow a logged-in user to upload (write) files
    // into a folder that is named with their own User ID.
    // This prevents one user from uploading files into another user's folder.
    match /vehicle-photos/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
