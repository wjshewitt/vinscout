rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow anyone to read any file. 
    // This is necessary so that once an image URL is saved to a report,
    // anyone viewing the report can see the image.
    match /{allPaths=**} {
      allow read;
    }
    
    // Only allow a logged-in user to upload images for their own reports.
    // The path contains the user's UID for security.
    match /vehicle-photos/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
